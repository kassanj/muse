<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, placeholder: "Email" %><br>
    <%= f.input :password, required: false, placeholder: "Password" %><br>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<br>

<%= render "devise/shared/links" %>
